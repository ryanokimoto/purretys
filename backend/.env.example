# backend/.env.example

# Application
APP_NAME=Purretys
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=postgresql://purretys_user:purretys_password@localhost:5432/purretys_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# WebSocket
WS_MESSAGE_QUEUE=redis://localhost:6379/3

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp

# Email (for future notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@purretys.com

# External APIs (if needed)
OPENAI_API_KEY=
STRIPE_API_KEY=

# Monitoring
SENTRY_DSN=
LOG_LEVEL=INFO

---

# frontend/.env.example

# API Configuration
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000
VITE_API_VERSION=v1

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true
VITE_ENABLE_MOCK_DATA=false

# Public Keys (safe to expose)
VITE_PUBLIC_STRIPE_KEY=
VITE_PUBLIC_GOOGLE_ANALYTICS_ID=

# App Configuration
VITE_APP_NAME=Purretys
VITE_APP_VERSION=1.0.0
VITE_DEFAULT_LOCALE=en

# Upload Settings
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Intervals (in milliseconds)
VITE_METRIC_UPDATE_INTERVAL=30000  # 30 seconds
VITE_WEBSOCKET_RECONNECT_INTERVAL=5000  # 5 seconds
VITE_TASK_REFRESH_INTERVAL=60000  # 1 minute

---

# mobile/.env.example

# API Configuration
API_URL=http://localhost:8000
WS_URL=ws://localhost:8000
API_VERSION=v1

# Expo Configuration
EXPO_PUBLIC_API_URL=http://localhost:8000
EXPO_PUBLIC_WS_URL=ws://localhost:8000

# Feature Flags
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_CAMERA=true
ENABLE_HAPTIC_FEEDBACK=true
ENABLE_OFFLINE_MODE=true

# App Configuration
APP_NAME=Purretys
APP_BUNDLE_ID=com.yourcompany.purretys
APP_VERSION=1.0.0

# Push Notifications
FIREBASE_API_KEY=
FIREBASE_AUTH_DOMAIN=
FIREBASE_PROJECT_ID=
FIREBASE_STORAGE_BUCKET=
FIREBASE_MESSAGING_SENDER_ID=
FIREBASE_APP_ID=

# Analytics
ANALYTICS_ENABLED=false
MIXPANEL_TOKEN=
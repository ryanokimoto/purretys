{
    "name": "@purretys/frontend",
    "private": true,
    "version": "1.0.0",
    "type": "module",
    "description": "Purretys web application frontend",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
